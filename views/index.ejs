<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
            crossorigin="anonymous"
        />
        <style>
            body {
                background-color: #333;
                color: #fff;
            }

            .container {
                background-color: #222;
                padding: 20px;
                border-radius: 8px;
                margin-top: 50px;
            }

            h1 {
                color: #fff;
                font-size: 2rem;
                text-align: center;
            }

            input[type="url"] {
                background-color: #555;
                color: #fff;
            }

            button {
                background-color: #28a745;
                color: #fff;
                border: none;
                padding: 8px 16px;
                border-radius: 4px;
                cursor: pointer;
            }

            button:hover {
                background-color: #218838;
            }

            table {
                background-color: #444;
                color: #fff;
            }

            th {
                font-weight: bold;
            }

            td,
            a {
                color: #ddd;
            }

            td a:hover {
                color: #aaa;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <h1>URL Shotify üë®‚Äçüíª</h1>
            <form action="/shortUrls" method="post" class="my-4 form-inline">
                <input
                    placeholder="URL"
                    type="url"
                    name="fullurl"
                    id="fullurl"
                    class="form-control col mr-2"
                />
                <button class="btn btn-success" type="submit">GO</button>
            </form>

            <form action="/cleardb" method="get" class="my-4 form-inline">
                <button type="submit" class="btn btn-danger">Clear</button>
            </form>

            <table class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th>Full URL</th>
                        <th>Short URL</th>
                        <th>Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% shortUrls.forEach(url => { %>
                    <tr>
                        <td>
                            <a href="<%= url.full %>" class="text-dark"
                                ><%= url.full %></a
                            >
                        </td>
                        <td>
                            <a href="<%= url.short %>" class="text-dark"
                                ><%= url.short %></a
                            >
                        </td>
                        <td><%= url.clicks %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </body>
</html>
